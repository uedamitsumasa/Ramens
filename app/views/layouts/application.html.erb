<!DOCTYPE html>
<html>
<head>
  <title>Ramens</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script src="https://kit.fontawesome.com/840e7c48b7.js" crossorigin="anonymous"></script>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% if admin_signed_in? %>
    <% if request.fullpath.include? "/admins" %>
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container-fluid">
            <a class="navbar-brand" href="/admins" style="font-size: 24px;">
              <%= image_tag "Ramen's.png", size: "75x50" %>
            </a>

            <div class="collapse navbar-collapse">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <%= link_to "店舗一覧", '/admins/shops',class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to "会員一覧", '/admins/users',class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to "レビュー一覧", '/admins/reviews',class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link' %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </header>
    <% end %>
  <% elsif user_signed_in? %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/" style="font-size: 24px;">
            <%= image_tag "Ramen's.png", size: "160x110" %>
          </a>

          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to "マイページ", publics_user_path(current_user), class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "ショップ一覧", publics_shops_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "会員一覧", publics_users_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  <% else %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/" style="font-size: 24px;">
            <%= image_tag "Ramen's.png", size: "75x50" %>
          </a>

          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to 'ゲストログイン（閲覧用）', homes_guest_sign_in_path, method: :post, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "ショップ一覧", publics_shops_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  <% end %>

  <main>
    <%= yield %>
  </main>

  <footer style="height: 100px;"></footer>
</body>
</html>
