<h2>Edit Reply</h2>

<%= form_with(model: @reply, url: publics_reply_path(@reply), method: :patch) do |form| %>
  <div class="form-group">
    <%= form.label :content, "Content" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <%= form.submit "Update Reply", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Delete Reply', publics_reply_path(@reply), method: :delete, data: { confirm: 'Are you sure you want to delete this reply?' } %>