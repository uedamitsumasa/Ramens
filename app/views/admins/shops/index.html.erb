<h1>ラーメン屋一覧</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>店舗名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td>
          <% if shop.shop_image.attached? %>
            <%= image_tag shop.shop_image.variant(resize: '100x100') %>
          <% else %>
            No Image
          <% end %>
        </td>
        <td><%= shop.name %></td>
        <td>
          <%= link_to '詳細リンク', admins_shop_path(shop) %>
          <%= link_to '編集リンク', edit_admins_shop_path(shop) %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <%= link_to '店舗の追加はこちらから', new_admins_shop_path %>

</table>
