<h1>店舗編集</h1>

<%= form_with(model: @shop, url: admins_shop_path(@shop), method: :patch) do |form| %>
  <div>
    <%= form.label :name, "店舗名" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :explanation, "店舗説明" %>
    <%= form.text_area :explanation %>
  </div>

  <div>
    <%= form.label :post_code, "郵便番号" %>
    <%= form.text_field :post_code %>
  </div>

  <div>
    <%= form.label :address, "住所" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :phone_number, "電話番号" %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :open_time, "開店時間" %>
    <%= form.time_select :open_time %>
  </div>

  <div>
    <%= form.label :close_time, "閉店時間" %>
    <%= form.time_select :close_time %>
  </div>

  <div>
    <%= form.label :shop_image, "店舗画像" %>
    <%= form.file_field :shop_image %>
  </div>

  <div>
    <%= form.submit 'Update Shop' %>
  </div>
<% end %>

<%= button_to 'Delete Shop', admins_shop_path(@shop), method: :delete, data: { confirm: 'この店舗の情報が削除されてしまいますがよろしいですか?' } %>
<%= link_to 'Back', admins_shop_path(@shop) %>